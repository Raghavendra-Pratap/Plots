{
    "name": "Bounding Box Plotter Development",
    "description": "Professional Python development environment for Bounding Box Plotter with all dependencies pre-installed",
    
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.mypy-type-checker",
                "ms-python.pytest-adapter",
                "ms-python.vscode-pylance",
                "ms-vscode.vscode-json",
                "yzhang.markdown-all-in-one",
                "ms-vscode.hexeditor",
                "ms-vscode.vscode-typescript-next",
                "bradlc.vscode-tailwindcss",
                "esbenp.prettier-vscode",
                "ms-vscode.vscode-js-debug",
                "ms-vscode.vscode-js-debug-companion"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.flake8Enabled": true,
                "python.linting.mypyEnabled": true,
                "python.formatting.provider": "black",
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "bounding-box-plotter/tests"
                ],
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 1000
            }
        }
    },
    
    "postCreateCommand": "pip install --upgrade pip && pip install -r bounding-box-plotter/requirements.txt",
    
    "postStartCommand": "echo 'üöÄ Bounding Box Plotter development environment ready!' && echo 'üìÅ Your code is in: /workspaces/Plots' && echo 'üêç Python environment: $(python --version)' && echo 'üì¶ Installed packages: $(pip list | wc -l)'",
    
    "remoteUser": "vscode",
    
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces/Plots,type=bind,consistency=cached"
    ],
    
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/Plots,type=bind,consistency=cached",
    "workspaceFolder": "/workspaces/Plots",
    
    "forwardPorts": [8000, 3000, 5000],
    
    "portsAttributes": {
        "8000": {
            "label": "Development Server",
            "onAutoForward": "notify"
        },
        "3000": {
            "label": "Frontend Dev Server",
            "onAutoForward": "notify"
        },
        "5000": {
            "label": "Backend API",
            "onAutoForward": "notify"
        }
    },
    
    "environmentVariables": {
        "PYTHONPATH": "/workspaces/Plots/bounding-box-plotter",
        "PYTHONUNBUFFERED": "1",
        "PYTHONDONTWRITEBYTECODE": "1",
        "MPLBACKEND": "TkAgg"
    }
} 